<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadmintonBoard.MainPage">

    <Grid>
        <Image Source="shuttlecock.png" Opacity=".03" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Create Board" Command="{Binding CreateBoardCommand}" WidthRequest="200"/>
            <Button Text="Manage Players" Command="{Binding ManagePlayersCommand}" WidthRequest="200"/>
            <Button Text="Manage Venues" Command="{Binding ManageVenuesCommand}" WidthRequest="200"/>
        </StackLayout>
    </Grid>
</ContentPage>